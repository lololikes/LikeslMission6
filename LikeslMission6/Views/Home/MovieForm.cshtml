@{
    ViewData["Title"] = "Movie Info";
}

@model LikeslMission6.Models.MovieResponse


<div class="text-center">
    <h4>Fill out this form to enter your movie info!</h4>
    <form method="post">
        <label asp-for="Category">Category: </label>
        <select asp-for="Id">
            <option value="">Select a Category</option>
            @foreach (Category c in ViewBag.categories)
            {
                <option value="c.Id">@c.CategoryName</option>
            }
        </select>
        <br />
        <label asp-for="MovieName">Movie Title: </label>
        <input asp-for="MovieName" required />
        <br />
        <label asp-for="Year">Year Made:</label>
        <input asp-for="Year" required />
        <br />
        <label asp-for="DirectorName">Director Name: </label>
        <input asp-for="DirectorName" required />
        <br />
        <label asp-for="Rating">Rating: </label>
        <select asp-for='Rating' required>
            <option value="G">G</option>
            <option value="PG">PG</option>
            <option value="PG-13">PG-13</option>
            <option value="R">R</option>
        </select>
        <br />
        <label asp-for="Edited">Edited?: </label>
        <select asp-for="Edited">
            <option value="True">Yes</option>
            <option value="False">No</option>
        </select>
        <br />
        <label asp-for="LentTo">Lent To: </label>
        <input asp-for="LentTo" />
        <br />
        <label asp-for="Notes">Notes: </label>
        <input asp-for="Notes" maxlength="25" />
        <br />

        <button type="submit">Submit</button>




    </form>
</div>
 